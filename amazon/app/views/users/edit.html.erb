<div class="container mt-5">
  <h1 class="text-center">Edit Profile</h1>
  <div class="card border-light mx-auto">
    <div class="card-header bg-secondary text-white">
      <h3 class="card-title"><%= current_user.full_name %></h3>
    </div>
    <div class="card-body">
      <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label "first_name:", class:"fw-bold" %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <hr>
        <div class="form-group">
          <%= f.label "last_name:", class:"fw-bold" %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
        <hr>
        <div class="form-group">
          <%= f.label "email:", class:"fw-bold" %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <hr>
        <div class="form-group">
          <%= f.label "password:", class:"fw-bold" %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <hr>
        <div class="form-group">
          <%= f.label "password_confirmation:", class:"fw-bold" %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>

        <div class="card-footer text-center">
          <%= f.submit "Update ", class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>