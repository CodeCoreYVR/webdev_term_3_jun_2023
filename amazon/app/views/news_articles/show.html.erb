<div class="container mt-5">
  <h1 class="text-center">News Artile Show</h1>
  <div class="card border-light mx-auto ">
    <div class="card-header bg-secondary text-white">
      <h3 class="card-title"><%= @news_article.title %></h3>
    </div>
    <div class="card-body">
      <div>
        <h3>Title:</h3>
        <p><%= @news_article.title %></p>
      </div>
      <hr>
      <div>
        <h3>Description:</h3>
        <p><%= @news_article.description %></p>
      </div>
      <hr>
      <div>
        <h3>Published at:</h3>
        <p><%= @news_article.published_at %></p>
      </div>
    </div>
    <div class="card-footer d-flex justify-content-around mt-2">
      <% if current_user.id == @news_article.user_id %>
        <% if can? :update, @news_article %>
          <div>
            <%= link_to 'Edit', edit_news_article_path(@news_article), class: 'btn btn-secondary' %>
          </div>
        <% end %>
        <% if can? :delete, @news_article %>
          <div>
            <%= button_to 'Delete', news_article_path(@news_article), method: :delete, class: 'btn btn-secondary', onclick: "return confirm('Are you sure you want to delete this news article?');" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>