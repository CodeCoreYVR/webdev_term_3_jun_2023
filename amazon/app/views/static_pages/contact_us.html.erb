<div class="container mt-5">
  <% if @message %>
    <div class="alert alert-success text-center">
      <%= @message %>
    </div>
  <% else %>
    <div class="card border-light mx-auto">
      <div class="card-header bg-secondary text-white">
        <h1 class="card-title text-center">Contact Us</h1>
      </div>
      <div class="card-body">
        <%= form_tag contact_us_path, method: :post, data: { turbo: false } do %>
          <div class="form-group">
            <strong><%= label_tag(:name, "Name:") %></strong>
            <%= text_field_tag(:name, current_user ? current_user.full_name : '', class: "form-control") %>
          </div>
          <hr>
          <div class="form-group">
            <strong><%= label_tag(:email, "Email:") %></strong>
            <%= email_field_tag(:email, current_user ? current_user.email : '', class: "form-control") %>
          </div>
          <hr>
          <div class="form-group">
            <strong><%= label_tag(:body, "Body:") %></strong>
            <%= text_area_tag(:body, nil, class: "form-control") %>
          </div>
          <div class="card-footer text-center">
            <%= submit_tag("Send", class: "btn btn-secondary") %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
