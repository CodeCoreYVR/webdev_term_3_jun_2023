<h2>New Tag</h2>
<% if @tag.errors.any? %>
    <ul>
        <% @tag.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>
<%= form_for @tag do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    <%= f.submit %>
<% end %>